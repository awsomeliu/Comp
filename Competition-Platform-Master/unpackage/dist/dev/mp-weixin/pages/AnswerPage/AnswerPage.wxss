.box {
  height: 18vw;
  background-color: #fefefe;
  /*  阴影 */
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.15);
  margin: 440rpx 2% 0rpx 2%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.box .label {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 16vw;
  color: #666666;
  font-size: 26rpx;
}
.box .label .icon {
  position: relative;
  width: 7vw;
  height: 7vw;
  margin: 0 1vw 2vw 1vw;
}
.box .label .icon image {
  width: 7vw;
  height: 7vw;
  z-index: 9;
}